<Layouts.app flash={@flash}>
  <div class="flex flex-col lg:flex-row gap-8 mt-6">
    <!-- Superheroes Column -->
    <div class="flex-1">
      <div class="flex items-center justify-between mb-4 mr-2">
        <h3 class="text-xl font-semibold">Superheroes</h3>
        <.link navigate={~p"/superheroes/new?return_to=dispatch"} class="text-blue-600 hover:underline">
          Create
        </.link>
      </div>
      <div id="superheroes" phx-update="stream" class="flex flex-col gap-4">
        <div :for={{id, superhero} <- @streams.superheroes} id={id} class={"card shadow-xl #{superhero_status_border_class(superhero.status)} #{if superhero.healthy?, do: "bg-base-200", else: "bg-warning/20 border-2 border-warning"}"}>
          <div class="card-body relative">

            <div class="dropdown dropdown-end absolute top-2 right-2">
              <button tabindex="0" role="button" class="btn btn-ghost btn-sm">
                <.icon name="hero-ellipsis-vertical" class="w-5 h-5" />
              </button>
              <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-40">
                <li>
                  <button phx-click={JS.push("superhero_on_duty", value: %{id: superhero.id})}>
                    Bring On Duty
                  </button>
                </li>
                <li>
                  <button phx-click={JS.push("superhero_off_duty", value: %{id: superhero.id})}>
                    Send Off Duty
                  </button>
                </li>
                <li>
                  <button phx-click={JS.push("superhero_recovery", value: %{id: superhero.id})}>
                    Send To Recovery
                  </button>
                </li>
                <li>
                  <.link navigate={~p"/superheroes/#{superhero}/edit?return_to=dispatch"}>
                    Edit
                  </.link>
                </li>
                <li>
                  <button phx-click={JS.push("terminate_superhero", value: %{id: superhero.id})}>
                    Terminate
                  </button>
                </li>
              </ul>
            </div>

            <h2 class="card-title text-2xl">{superhero.alias}</h2>
            <p class="text-lg text-base-content/70">{superhero.name}</p>

            <div class={"badge mt-2 #{superhero_status_badge_class(superhero.status)}"}>
              {superhero.status}
            </div>

            <div class="mt-4 space-y-2">
              <div class="flex justify-between">
                <span class="font-semibold">Health:</span>
                <span class={unless superhero.healthy?, do: "text-warning font-bold"}>
                  {superhero.health}
                </span>
              </div>
              <div class="flex justify-between">
                <span class="font-semibold">Win Rate:</span>
                <span>{Float.round(superhero.win_rate * 100, 1)}%</span>
              </div>
            </div>

            <div class="card-actions justify-end mt-4">
              <.button phx-click={JS.push("superhero_assign", value: %{id: superhero.id})} variant="primary">
                Create Assignment
              </.button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Assignments Column -->
    <div class="flex-1">
      <h3 class="text-xl font-semibold mb-4">Assignments</h3>
      <div id="assignments" phx-update="stream" class="flex flex-col gap-4">
        <div :for={{id, assignment} <- @streams.assignments} id={id} class={"card bg-base-200 shadow-xl #{status_border_class(assignment.status)}"}>
          <div class="card-body relative">
            <div class="dropdown dropdown-end absolute top-2 right-2">
              <button tabindex="0" role="button" class="btn btn-ghost btn-sm">
                <.icon name="hero-ellipsis-vertical" class="w-5 h-5" />
              </button>
              <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-40">
                <li>
                  <button phx-click={JS.push("assignment_close", value: %{id: assignment.id})}>
                    Close
                  </button>
                </li>
                <li>
                  <button phx-click={JS.push("assignment_reopen", value: %{id: assignment.id})}>
                    Reopen
                  </button>
                </li>
                <li>
                  <.link navigate={~p"/assignments/#{assignment}/edit?return_to=dispatch"}>
                    Edit
                  </.link>
                </li>
                <li>
                  <button
                    phx-click={JS.push("assignment_delete", value: %{id: assignment.id})}
                  >
                    Delete
                  </button>
                </li>
              </ul>
            </div>

            <h2 class="card-title text-2xl">
              {superhero_alias(assignment.maybe_superhero)} Assignment
            </h2>

            <div class={"badge mt-2 #{status_badge_class(assignment.status)}"}>
              {assignment.status}
            </div>

            <div class="mt-4 space-y-2">
              <div class="flex justify-between">
                <span class="font-semibold">Result:</span>
                <span>{assignment.result}</span>
              </div>
            </div>

            <div class="card-actions justify-end mt-4">
              <.button phx-click={JS.push("dispatch_assignment", value: %{id: assignment.id})} variant="primary">
                Dispatch
              </.button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layouts.app>
